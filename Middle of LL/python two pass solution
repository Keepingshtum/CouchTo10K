# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def middleNode(self, head: Optional[ListNode]) -> Optional[ListNode]:
        counter = 0
        temp = head
        
        while temp:
            temp = temp.next
            counter +=1
        
        if counter%2 == 0:
            middle = (counter//2)
        else:
            middle = counter//2
        
        for i in range(0,middle):
            head = head.next
        
        return head
